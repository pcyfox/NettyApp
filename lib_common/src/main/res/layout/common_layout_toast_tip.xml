<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_rectangle_corners_14_color_dark"
    android:paddingStart="50dp"
    android:paddingTop="30dp"
    android:paddingEnd="50dp"
    android:paddingBottom="30dp">


    <ImageView
        android:id="@+id/view_toast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_ic_tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_toast_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/common_white"
        android:textSize="@dimen/common_content_text"
        app:layout_constraintEnd_toEndOf="@+id/view_toast_icon"
        app:layout_constraintStart_toStartOf="@+id/view_toast_icon"
        app:layout_constraintTop_toBottomOf="@+id/view_toast_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>